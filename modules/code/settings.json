{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.rulers": [120],
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "window.commandCenter": false,
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "vs-minimal",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",

  // Git
  "diffEditor.diffAlgorithm": "advanced",
  "git.openRepositoryInParentFolders": "always",

  // Go
  "go.coverOnSingleTest": true,
  "go.coverOnSingleTestFile": true,
  "go.lintFlags": ["--fast"],
  "go.lintTool": "golangci-lint",
  "go.testFlags": ["-v"],
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // NVim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1 // Run extension in its own thread.
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",

  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // TS
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // YAML
  "redhat.telemetry.enabled": false,
  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
      ".gitlab-ci.yml",
      ".gitlab-ci.yaml"
    ],
    "https://json.schemastore.org/kustomization": "kustomization.yaml",
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.yaml"
    ],
    "https://raw.githubusercontent.com/bitnami-labs/sealed-secrets/main/schema-v1alpha1.yaml": "sealedsecret.yaml",
    "kubernetes": ["deploy/**", "!kustomization.yaml", "!sealedsecret.yaml"]
  },

  // XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  // Project Manager
  "projectManager.any.baseFolders": [
    "~/dev/next/services/",
    "~/dev/next/projects/"
  ],
  "projectManager.any.maxDepthRecursion": 1,
  "projectManager.git.baseFolders": ["~/dev/"],
  "projectManager.hg.ignoredFolders": ["node_modules", "out", "test", "vendor"],
  "projectManager.vscode.ignoredFolders": [
    "node_modules",
    "out",
    "test",
    "vendor"
  ]
}
