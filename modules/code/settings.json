{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.quickSuggestions": {
    "comments": "on",
    "other": "on",
    "strings": "on"
  },
  "editor.rulers": [120],
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "window.commandCenter": false,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "vs-minimal",
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,

  // Git
  "diffEditor.diffAlgorithm": "advanced",
  "git.openRepositoryInParentFolders": "always",

  // Go
  "go.buildFlags": ["-tags=e2e"],
  "go.lintFlags": ["--fast"],
  "go.lintTool": "golangci-lint",
  "go.testTags": "e2e",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // NVim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1 // Run extension in its own thread.
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",

  // Python
  "[python]": {
    "editor.formatOnType": true
  },

  // YAML
  "redhat.telemetry.enabled": false,
  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
      ".gitlab-ci.yml",
      ".gitlab-ci.yaml"
    ],
    "https://json.schemastore.org/kustomization": "kustomization.yaml",
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.yaml"
    ],
    "https://raw.githubusercontent.com/bitnami-labs/sealed-secrets/main/schema-v1alpha1.yaml": "sealedsecret.yaml",
    "kubernetes": ["deploy/**", "!kustomization.yaml", "!sealedsecret.yaml"]
  }
}
