{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": true,
    "other": true,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.rulers": [120],
  "editor.suggest.localityBonus": true,

  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "window.commandCenter": false,
  "window.confirmBeforeClose": "keyboardOnly",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "vs-minimal",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",

  // Git
  "diffEditor.diffAlgorithm": "advanced",
  "git.openRepositoryInParentFolders": "always",
  "gitlens.codeLens.enabled": false,

  // Go
  "go.coverOnSingleTest": true,
  "go.coverOnSingleTestFile": true,
  "go.lintFlags": ["--fast", "--fix"],
  "go.lintTool": "golangci-lint",
  "go.testFlags": ["-coverpkg=all", "-v"],
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // Neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1 // Run extension in its own thread.
  },
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",

  // Rewrap
  "rewrap.autoWrap.enabled": true,
  "rewrap.wrappingColumn": 120,

  // Terminal
  "terminal.integrated.cursorBlinking": true,

  // Typescript
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // YAML
  "redhat.telemetry.enabled": false,
  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
      ".gitlab-ci.yml",
      ".gitlab-ci.yaml"
    ],
    "https://json.schemastore.org/kustomization": "kustomization.yaml",
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.yaml"
    ],
    "https://raw.githubusercontent.com/bitnami-labs/sealed-secrets/main/schema-v1alpha1.yaml": "sealedsecret.yaml",
    "kubernetes": ["deploy/**", "!kustomization.yaml", "!sealedsecret.yaml"]
  },

  // XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  // Project Manager
  "projectManager.any.baseFolders": [
    "~/dev/next/packages/",
    "~/dev/next/projects/",
    "~/dev/next/services/"
  ],
  "projectManager.any.ignoredFolders": [
    "node_modules",
    "out",
    "test",
    "typings"
  ],
  "projectManager.any.maxDepthRecursion": 1,
  "projectManager.git.baseFolders": ["~/dev/"]
}
